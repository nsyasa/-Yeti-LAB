{
    "name": "yeti-lab",
    "version": "1.0.0",
    "description": "Yeti LAB - İnteraktif Robotik ve Kodlama Eğitim Platformu",
    "main": "app.js",
    "scripts": {
        "convert": "node --experimental-vm-modules scripts/convert-js-to-json.js",
        "import": "node scripts/import-to-supabase.js",
        "migrate": "npm run convert && npm run import",
        "dev": "vite",
        "build": "vite build",
        "preview": "vite preview",
        "test": "vitest run",
        "test:watch": "vitest",
        "test:coverage": "vitest run --coverage",
        "lint": "eslint .",
        "lint:fix": "eslint . --fix",
        "format": "prettier --write .",
        "prepare": "husky",
        "preflight": "node scripts/preflight.js"
    },
    "lint-staged": {
        "*.js": [
            "eslint --fix",
            "prettier --write"
        ],
        "*.{html,css,json,md}": [
            "prettier --write"
        ]
    },
    "keywords": [
        "education",
        "arduino",
        "microbit",
        "scratch"
    ],
    "author": "",
    "license": "ISC",
    "type": "module",
    "devDependencies": {
        "@playwright/test": "^1.57.0",
        "@tailwindcss/cli": "^4.1.18",
        "@tailwindcss/vite": "^4.1.18",
        "@types/node": "^25.0.5",
        "@vitest/coverage-v8": "^4.0.17",
        "eslint": "^9.17.0",
        "globals": "^15.14.0",
        "husky": "^9.1.7",
        "jsdom": "^25.0.0",
        "lint-staged": "^16.2.7",
        "prettier": "^3.7.4",
        "tailwindcss": "^4.1.18",
        "vite": "^7.3.1",
        "vitest": "^4.0.17"
    },
    "dependencies": {
        "@supabase/supabase-js": "^2.28.0",
        "@tiptap/core": "^2.6.0",
        "@tiptap/extension-code-block-lowlight": "^2.6.0",
        "@tiptap/extension-image": "^2.6.0",
        "@tiptap/extension-link": "^2.6.0",
        "@tiptap/extension-placeholder": "^2.6.0",
        "@tiptap/extension-table": "^2.6.0",
        "@tiptap/extension-table-cell": "^2.6.0",
        "@tiptap/extension-table-header": "^2.6.0",
        "@tiptap/extension-table-row": "^2.6.0",
        "@tiptap/pm": "^2.6.0",
        "@tiptap/starter-kit": "^2.6.0",
        "dompurify": "^3.0.0",
        "lowlight": "^3.1.0"
    }
}
